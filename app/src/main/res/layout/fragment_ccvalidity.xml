<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="io.mallinicouture.ui.creditcard.fragment.CCValidityFragment">

    <androidx.cardview.widget.CardView
        card_view:cardCornerRadius="1dp"
        card_view:elevation="4dp"
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CardLabel"
                android:text="@string/card_validity"/>

            <io.mallinicouture.ui.creditcard.utils.CreditCardEditText
                style="@style/CardInput"
                android:id="@+id/et_validity"
                android:hint="Expiry Date"
                android:inputType="number"
                android:maxLength="5"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
