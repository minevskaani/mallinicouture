<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/iv_adv_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_mini"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,3:2"
        />

    <ImageView
        android:id="@+id/iv_adv_gradient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_adv_imageView"
        app:layout_constraintEnd_toEndOf="@id/iv_adv_imageView"
        app:layout_constraintStart_toStartOf="@id/iv_adv_imageView"
        app:srcCompat="@drawable/vp_home_adv_item_gradient"
        app:layout_constraintDimensionRatio="H,7:1"
        />

    <TextView
        android:id="@+id/tv_adv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="New dresses"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/iv_adv_gradient"
        app:layout_constraintStart_toStartOf="@id/iv_adv_gradient"
        app:layout_constraintTop_toTopOf="@id/iv_adv_gradient" />

    <TextView
        android:id="@+id/tv_adv_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="30+ Designer Brands"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/iv_adv_gradient"
        app:layout_constraintStart_toStartOf="@id/iv_adv_gradient"
        app:layout_constraintTop_toBottomOf="@id/tv_adv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>